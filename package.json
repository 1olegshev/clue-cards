{
  "name": "clue-cards",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run test:run && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:build": "npm run typecheck && npm run build",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:deployed": "BASE_URL=https://clue-cards.web.app playwright test",
    "test:e2e:deployed:headed": "BASE_URL=https://clue-cards.web.app playwright test --headed --workers=1",
    "prepare": "husky",
    "firebase:emulators": "firebase emulators:start",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "cleanup:rooms": "node scripts/cleanup-rooms.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run typecheck",
      "npm run test:run"
    ]
  },
  "dependencies": {
    "bad-words-next": "^3.2.0",
    "firebase": "^12.8.0",
    "next": "^16.1.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "firebase-admin": "^13.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
