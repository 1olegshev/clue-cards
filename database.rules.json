{
  "rules": {
    "rooms": {
      "$roomCode": {
        ".read": true,
        ".write": true,
        
        "players": {
          "$playerId": {
            ".read": true,
            ".write": true
          }
        },
        
        "messages": {
          "$messageId": {
            ".read": true,
            ".write": true,
            ".validate": "newData.hasChildren(['playerName', 'message', 'timestamp', 'type'])"
          }
        }
      }
    }
  }
}
